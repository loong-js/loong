{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "target": "ES6",
    "useDefineForClassFields": true,
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "preserveSymlinks": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "paths": {
      "@loong-js/core": ["./packages/core/src/index.ts"],
      "@loong-js/component": ["./packages/component/src/index.ts"],
      "@loong-js/observer": ["./packages/observer/src/index.ts"],
      "@loong-js/react-pure": ["./packages/react-pure/src/index.ts"],
      "@loong-js/react-mobx": ["./packages/react-mobx/src/index.ts"],
      "@loong-js/react": ["./packages/react/src/index.ts"],
      "@loong-js/shared": ["./packages/shared/src/index.ts"]
    }
  },
  "include": [
    "packages/**/src/*",
    "packages/**/src/types/*",
    "demo/*"
  ]
}
