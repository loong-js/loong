{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "commit": "git-cz",
    "publish:alpha": "npm run build && lerna publish",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx packages/**/src/**"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/node": "^17.0.36",
    "chalk": "4.1.2",
    "commitizen": "^4.2.4",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^8.13.0",
    "fs-extra": "^10.1.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "ora": "5.4.1",
    "rollup": "^2.70.1",
    "rollup-plugin-dts": "^4.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  }
}
